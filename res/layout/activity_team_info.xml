<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nitin.assignment4.TeamInfo"
    android:background="@drawable/usc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mainTitle"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#ffcc00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TeamInfo"
        android:id="@+id/TeamInfo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ffcc00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Mem1"
        android:id="@+id/Mem1"
        android:layout_below="@+id/TeamInfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textStyle="bold"
        android:textColor="#ffcc00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mem1a"
        android:id="@+id/Mem1a"
        android:layout_below="@+id/Mem1"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mem1b"
        android:id="@+id/Mem1b"
        android:layout_below="@+id/Mem1a"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Mem2"
        android:id="@+id/Mem2"
        android:layout_below="@+id/Mem1b"
        android:textColor="#ffcc00"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mem2a"
        android:id="@+id/Mem2a"
        android:layout_below="@+id/Mem2"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mem2b"
        android:id="@+id/Mem2b"
        android:layout_below="@+id/Mem2a"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/usclogo"
        android:id="@+id/logo"
        android:contentDescription="@string/usclogop3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Mem2b"
        android:layout_marginTop="110dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/mem1"
        android:id="@+id/mem1"
        android:contentDescription="@string/InstPic"
        android:layout_alignTop="@+id/Mem2"
        android:layout_alignEnd="@+id/textView"
        android:layout_toEndOf="@+id/Mem2a" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/mem2"
        android:id="@+id/mem2"
        android:contentDescription="@string/InstPic"
        android:layout_alignTop="@+id/TeamInfo"
        android:layout_alignStart="@+id/mem1"
        android:layout_alignEnd="@+id/mem1" />

</RelativeLayout>
